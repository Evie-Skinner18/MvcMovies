@model MvcMovies.Models.FilmGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h2>Search for a Film</h2>

@*adding GET as the form's method ensures that the search string will be added to the URL as query string. So the user*@
@*can save the page and share it*@
<form asp-controller="Films" asp-action="Index" method="get">
    <p>
        @*select menu*@
        <select asp-for="FilmGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        @* search bar*@
        Title: <input type="text" name="SearchString">

        @*submit button*@
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Genre)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Review)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Films)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Review)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
